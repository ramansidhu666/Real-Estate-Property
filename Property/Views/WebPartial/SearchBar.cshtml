
@using (Html.BeginForm("SearchProperty", "Property", FormMethod.Post))
{

    <section class="listing-search">
        @*<form action="index.html" method="get" class="listing-search__form">*@
            <div class="row">
                <div class="col-sm-6">
                    <label for="listing-type" class="listing-search__label">Search by City, MLS ID or Postal Code</label>
                    <input name="MLSID_City_PostalCode" class="listing-search__field" type="text" id="MLSID_City_PostalCode" />

                </div><!-- .col -->

                <div class="col-sm-2">
                    <label for="bedrooms" class="listing-search__label">Must Choose Type</label>
                    <select name="CurrentPropertyType" id="CurrentPropertyType" class="ht-field">
                        <option value="Residential" selected>Residential</option>
                        <option value="Commercial">Commercial</option>
                        <option value="Condo">Condo</option>
                       
                    </select>
                </div><!-- .col -->

                <div class="col-sm-2">
                    <label for="" class="listing-search__label listing-search__label--hidden">Search Property</label>
                    <button type="submit" id="search-btn" class="main-search__btn">Search Property</button>
                </div><!-- .col -->
                <div class="col-sm-2">
                    <label for="listing-btn" class="listing-search__label listing-search__label--hidden">Advanced Search</label>
                    <a href="#" id="listing-btn" class="listing-search__btn">Advanced Search</a>
                </div><!-- .col -->
            </div><!-- row -->

            <div class="listing-search__advance">
                <div class="row">
                    <div class="col-sm-3">
                        <label for="bedrooms" class="listing-search__label">Bedrooms</label>
                        <select name="BedRooms" id="BedRooms" class="ht-field">
                            <option value="0" selected>Any</option>
                            <option value="1">01 bedroom(s)</option>
                            <option value="2">02 bedroom(s)</option>
                            <option value="3">03 bedroom(s)</option>
                            <option value="4">04 bedroom(s)</option>
                            <option value="5">05 bedroom(s)</option>
                            <option value="6">06 bedroom(s)</option>
                            <option value="7">07 bedroom(s)</option>
                        </select>
                    </div><!-- .col -->

                    <div class="col-sm-3">
                        <label for="bathrooms" class="listing-search__label">Bathrooms</label>
                        <select name="BathRooms" id="BathRooms" class="ht-field">
                            <option value="0" selected>Any</option>
                            <option value="1">01 bathroom(s)</option>
                            <option value="2">02 bathroom(s)</option>
                            <option value="3">03 bathroom(s)</option>
                            <option value="4">04 bathroom(s)</option>
                            <option value="5">05 bathroom(s)</option>
                            <option value="6">06 bathroom(s)</option>
                            <option value="7">07 bathroom(s)</option>
                        </select>
                    </div><!-- .col -->
                    <div class="col-sm-3">
                        <label for="keywords" class="listing-search__label">Status</label>
                        <select name="SaleLease" id="SaleLease" class="ht-field">
                            <option value="0">Any</option>
                            <option value="Sale">Sale</option>
                            <option value="Lease">Lease</option>
                        </select>
                    </div><!-- .col -->

                    <div class="col-sm-3">
                        <label for="min-price" class="listing-search__label">Min Price</label>
                        <select name="MinPrice" id="MinPrice" class="ht-field">
                            <option value="0" selected>Unlimited</option>
                            <option value="$1,000">$1,000</option>
                            <option value="$10,000">$10,000</option>
                            <option value="$20,000">$20,000</option>
                            <option value="$50,000">$50,000</option>
                            <option value="$100,000">$100,000</option>
                        </select>
                    </div><!-- .col -->
                    <div class="col-sm-3">
                        <label for="min-price" class="listing-search__label">Max Price</label>
                        <select name="MaxPrice" id="MaxPrice" class="ht-field">
                            <option value="0" selected>Unlimited</option>
                            <option value="$1,000">$1,000</option>
                            <option value="$10,000">$10,000</option>
                            <option value="$20,000">$20,000</option>
                            <option value="$50,000">$50,000</option>
                            <option value="$100,000">$100,000</option>
                        </select>
                    </div><!-- .col -->


                    <div class="col-sm-3">
                        <label for="hometype" class="listing-search__label">Type Of Home</label>
                        <select name="PropertyType" id="PropertyType" class="ht-field">
                            <option value="0">Any</option>
                            <option value="Detached">Detached</option>
                            <option value="Att/Row/Twnhouse">Att/Row/Twnhouse</option>
                            <option value="Semi-Detached">Semi-Detached</option>
                            <option value="Vacant Land">Vacant Land</option>
                            <option value="Link">Link</option>
                            <option value="Duplex">Duplex</option>
                            <option value="Farm">Farm</option>
                            <option value="Multiplex">Multiplex</option>
                            <option value="Cottage">Cottage</option>
                            <option value="Triplex">Triplex</option>
                            <option value="Rural Resid">Rural Resid</option>
                            <option value="Store W/Apt/Offc">Store W/Apt/Offc</option>
                            <option value="Lower Level">Lower Level</option>
                            <option value="Upper Level">Upper Level</option>
                            <option value="Other">Other</option>
                            <option value="Mobile/Trailer">Mobile/Trailer</option>
                            <option value="Fourplex">Fourplex</option>
                            <option value="Room">Room</option>
                            <option value="Shared Room">Shared Room</option>
                        </select>
                    </div><!-- .col -->

                </div><!-- .row -->


            </div><!-- .listing-search__advance -->
        @*</form>*@<!-- .listing-search__form -->
    </section><!-- .listing-search -->
}